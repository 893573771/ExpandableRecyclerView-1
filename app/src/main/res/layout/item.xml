<com.andriipanasiuk.expandablerecyclerview.sample.SimpleItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/background_selector">

    <RelativeLayout
        android:id="@+id/collapsed_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/collapsed_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Andrii Panasiuk"
            android:textSize="20sp" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/collapsed_name"
            android:layout_alignTop="@id/collapsed_name"
            android:background="@drawable/left_rounded_rectangle" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/expanded_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/expanded_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_rounded_rectangle"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="Andrii Panasiuk"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/contributions_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/expanded_name"
            android:lineSpacingExtra="2dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Contribution 1 /n Contribution2"
            android:textSize="14sp" />

    </RelativeLayout>


</com.andriipanasiuk.expandablerecyclerview.sample.SimpleItemView>
